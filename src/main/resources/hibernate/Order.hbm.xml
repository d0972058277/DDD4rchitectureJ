<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="porridge.my.way.dddarchitecturej.order.domain.models.Order" table="orders">
        <id name="id" column="id">
            <generator class="native" />
        </id>
        <component name="customerInfo"
            class="porridge.my.way.dddarchitecturej.order.domain.models.CustomerInfo">
            <property name="name" column="name" />
            <property name="address" column="address" />
        </component>
        <set name="orderItems" cascade="all-delete-orphan">
            <key column="order_id" />
            <one-to-many class="porridge.my.way.dddarchitecturej.order.domain.models.OrderItem" />
        </set>
    </class>
</hibernate-mapping>